{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "declaration": true,
    "module": "Node16",
    // helps local development, could be dropped out of the NPM package though
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
